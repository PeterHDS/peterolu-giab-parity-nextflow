manifest {
  name            = 'portable-precision-giab-parity'
  nextflowVersion = '>=23.10.0'
}

params {
  reads           = "${baseDir}/../assets/reads/*_{R1,R2}.fastq.gz"
  outdir          = "${baseDir}/../results"
  reference_fasta = "${baseDir}/../assets/ref/miniref.fa"
  truth_vcf       = "${baseDir}/../assets/giab/chrMock_truth.vcf.gz"
  confident_bed   = "${baseDir}/../assets/giab/chrMock_confident.bed"
}

profiles {
  standard {
    process.executor = 'local'
  }
  docker {
    process.executor = 'local'
    docker.enabled   = true
    // keep user mapping to avoid root-owned files on WSL
    docker.runOptions = '-u $(id -u):$(id -g)'
  }
}
